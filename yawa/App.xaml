<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="yawa.App">
	<Application.Resources>
		<ResourceDictionary>
			<Style x:Key="LabelDefault" TargetType="Label">
				<Setter Property="FontSize">
					<Setter.Value>
						<OnPlatform x:TypeArguments="x:Double">
							<OnPlatform.iOS>12</OnPlatform.iOS>
							<OnPlatform.Android>14</OnPlatform.Android>
						</OnPlatform>
					</Setter.Value>
				</Setter>
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>